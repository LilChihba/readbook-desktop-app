<Page x:Class="ReadBook.Pages.ResetPassword.ChangePassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReadBook.Pages.ResetPassword"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="300"
      Title="ChangePassword">
    <Grid>
        <Label Content="Введите новый пароль" Style="{StaticResource CustomFont}" FontSize="11" Foreground="White" HorizontalAlignment="Center" Height="30" Margin="0,-75,53,0"/>
        <PasswordBox x:Name="NewPassBox" Style="{StaticResource CustomFont}" Foreground="#FF5A5A5A" Padding="4,0,0,0" Margin="0,-35,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Width="180" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Label Content="Повторите новый пароль" Style="{StaticResource CustomFont}" FontSize="11" Foreground="White" HorizontalAlignment="Center" Height="30" Margin="0,35,39,0"/>
        <PasswordBox x:Name="RepeatPassBox" Style="{StaticResource CustomFont}" Foreground="#FF5A5A5A" Padding="4,0,0,0" Margin="0,70,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Width="180" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Page>
