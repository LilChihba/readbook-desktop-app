<Page x:Class="ReadBook.Pages.ResetPassword.InputPhone"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReadBook.Pages.ResetPassword"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="300"
      Title="Восстановление пароля">
    <Grid>
        <Label Content="Номер телефона" Style="{StaticResource CustomFont}" FontSize="11" Foreground="White" Width="120" Height="30" Margin="0,-35,70,0"/>
        <TextBox x:Name="NumberTextBox" Style="{StaticResource CustomFont}" Foreground="#FF5A5A5A" Padding="4,0,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Width="180" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" TextChanged="NumberTextBox_TextChanged" PreviewTextInput="NumberTextBox_PreviewTextInput" CommandManager.PreviewExecuted="PreviewExecuted"/>
    </Grid>
</Page>
